<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="SSPCF" constructor="ScreenshotComponent" version="1.0.0" display-name-key="ScreenshotComponent" description-key="ScreenshotComponent for PowerApps" control-type="standard">
    <external-service-usage enabled="false">
    </external-service-usage>

    <!-- Screenshot output property -->
    <property name="screenshot" display-name-key="Screenshot" description-key="Base64 screenshot image" of-type="SingleLine.Text" usage="output" />

    <!-- Button properties with default values -->
    <property 
      name="buttonText" 
      display-name-key="Button Text" 
      description-key="Text displayed on the button" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="Take Screenshot" />

    <property 
      name="buttonHeight" 
      display-name-key="Button Height" 
      description-key="Height of the button in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="40" />

    <property 
      name="buttonWidth" 
      display-name-key="Button Width" 
      description-key="Width of the button in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="150" />

    <property 
      name="borderRadius" 
      display-name-key="Border Radius" 
      description-key="Border radius of the button in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="5" />

    <property 
      name="borderStyle" 
      display-name-key="Border Style" 
      description-key="CSS style for the button border" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="1px solid #000" />

    <property 
      name="padding" 
      display-name-key="Padding" 
      description-key="Padding inside the button in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="10" />

    <property 
      name="backgroundColor" 
      display-name-key="Background Color" 
      description-key="Background color of the button" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="#0078D7" />

    <property 
      name="fontColor" 
      display-name-key="Font Color" 
      description-key="Font color of the button text" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="#ffffff" />

    <property 
      name="hoverBackgroundColor" 
      display-name-key="Hover Background Color" 
      description-key="Background color of the button when hovered" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="#005A9E" />

    <property 
      name="fontSize" 
      display-name-key="Font Size" 
      description-key="Size of the font in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="14" />

    <property 
      name="fontFamily" 
      display-name-key="Font Family" 
      description-key="Font family of the button text" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="Arial, sans-serif" />

    <property 
      name="textAlign" 
      display-name-key="Text Alignment" 
      description-key="Alignment of the button text" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="center" />

    <property 
      name="fontWeight" 
      display-name-key="Font Weight" 
      description-key="Font weight of the button text (e.g., bold, normal)" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="normal" />

    <property 
      name="textTransform" 
      display-name-key="Text Transform" 
      description-key="Text transform style (e.g., uppercase, lowercase)" 
      of-type="SingleLine.Text" 
      usage="bound" 
      required="true" 
      default-value="none" />

    <property 
      name="lineHeight" 
      display-name-key="Line Height" 
      description-key="Line height of the button text in pixels" 
      of-type="Whole.None" 
      usage="bound" 
      required="true" 
      default-value="normal" />

    <resources>
      <code path="index.ts" order="1" />
    </resources>
  </control>
</manifest>